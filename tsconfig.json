{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "rootDir": ".", 
    "outDir": "dist", 
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "index.ts",
    "config",
    "models",
    "middleware",
    "routes",
    "controllers"
  ],
  "exclude": ["node_modules", "dist"]
}
